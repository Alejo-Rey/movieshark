<p id="notice"><%= notice %></p>

<h1>Funcions</h1>

<table>
  <thead>
    <tr>
      <th>Pelicula</th>
      <th>Dia</th>
      <th>Num sillas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funcions.each do |funcion| %>
      <tr>
        <td><%= funcion.pelicula %></td>
        <td><%= funcion.dia %></td>
        <td><%= funcion.num_sillas %></td>
        <td><%= link_to 'Show', funcion %></td>
        <td><%= link_to 'Edit', edit_funcion_path(funcion) %></td>
        <td><%= link_to 'Destroy', funcion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

